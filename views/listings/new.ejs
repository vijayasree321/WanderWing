<% layout("./layouts/boilerplate") %>
<div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
    <h2>Create new listing</h2><br>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Title is required.</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback"> Description should not be empty. </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label" >Upload Listing Image</label>
            <input type="file" name="listing[image]"  class="form-control" >
            
        </div>
        Or
        <div class="mb-3">
            <label for="image" class="form-label" >Enter an url</label>
            <input type="text" name="listing[image][url]"  class="form-control" >
            <div class="invalid-feedback">Enter a valid image URL. </div>
        </div>
        <div class="mb-3">
            <label for="Category" class="form-label" >specify the Category</label>
            <div class="dropdown">
                <input type="text" class="form-control dropdown-toggle" id="categoryInput" placeholder="Select a category" data-bs-toggle="dropdown" aria-expanded="false" name="listing[category]">
                <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button">Trending</button></li>
                    <li><button class="dropdown-item" type="button">Lodge</button></li>
                    <li><button class="dropdown-item" type="button">Mountains</button></li>
                    <li><button class="dropdown-item" type="button">Iconic-cities</button></li>
                    <li><button class="dropdown-item" type="button">Beaches</button></li>
                    <li><button class="dropdown-item" type="button">Pools</button></li>
                    <li><button class="dropdown-item" type="button">Castles</button></li>
                    <li><button class="dropdown-item" type="button">Camping</button></li>
                    <li><button class="dropdown-item" type="button">Towers</button></li>
                    <li><button class="dropdown-item" type="button">Boats</button></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label" >Price</label>
                <input type="number" name="listing[price]" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Price must be entered.</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label" >Country</label>
                <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Jaipur, Rajasthan" class="form-control" required>
            <div class="invalid-feedback">Please specify the location.</div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn" >Add</button>
        
    </form>
    </div>
</div>


